{
  "name": "paperwork-automation",
  "version": "0.1.0",
  "description": "Automate daily store paperwork processing from Excel to SQL/DB",
  "main": "scripts/extract-all.py",
  "scripts": {
    "extract-sql": "ts-node scripts/extract-sql.ts",
    "extract-enhanced": "ts-node scripts/extract-sql-enhanced.ts",
    "extract-all": "python3 scripts/extract-all.py",
    "extract-daily": "python3 scripts/insert-data.py",
    "extract-time": "python3 scripts/extract-time-segments.py",
    "extract-all-db": "python3 scripts/extract-all.py --direct-db",
    "extract-daily-db": "python3 scripts/insert-data.py --direct-db",
    "extract-time-db": "python3 scripts/extract-time-segments.py --direct-db",
    "daily-job": "ts-node jobs/run-daily-job.ts",
    "test": "python3 simple_test.py",
    "test:core": "python3 run_tests.py core",
    "test:validation": "python3 run_tests.py validation",
    "test:quick": "python3 run_tests.py quick",
    "test:coverage": "python3 run_tests.py coverage",
    "test:db": "python3 -m pytest tests/test_database.py -v",
    "validate": "python3 test_validation_simple.py",
    "db:setup": "python3 scripts/extract-all.py --setup-test-db",
    "db:verify": "python3 -m utils.database --verify",
    "db:verify-test": "python3 -m utils.database --verify --test",
    "db:check": "python3 -m utils.database --check-structure",
    "db:check-test": "python3 -m utils.database --check-structure --test",
    "build": "tsc",
    "help": "python3 scripts/extract-all.py --help",
    "status": "ts-node scripts/extract-sql-enhanced.ts status"
  },
  "keywords": [
    "excel",
    "sql",
    "automation",
    "pandas",
    "restaurant",
    "data",
    "validation",
    "haidilao"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.0.0",
    "xlsx": "^0.18.5",
    "pg": "^8.11.0",
    "dotenv": "^16.3.1",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "@types/node": "^20.4.2",
    "@types/pg": "^8.10.2"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
